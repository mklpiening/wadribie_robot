<?xml version="1.0"?>
<launch>
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find wadribie_robot)/urdf/wadribie.urdf.xacro'" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

  <node name="simplebot" pkg="simplebot_driver" type="simplebot" respawn="false" output="screen">
    <param name="port" type="string" value="/dev/simplebot" />
    <param name="baudrate" type="int" value="115200" />
    <param name="max_speed" type="double" value="0.8" />
    <param name="steps_per_rotation" type="int" value="90" />
    <param name="wheel_radius" type="double" value="0.025" />
    <param name="axis_length" type="double" value="0.18" />
    <param name="turning_adaption" type="double" value="0.862" />
  </node>

  <node name="rplidarNode" pkg="rplidar_ros" type="rplidarNode" output="screen">
    <param name="serial_port" type="string" value="/dev/rplidar"/>
    <param name="serial_baudrate" type="int" value="115200"/>
    <param name="frame_id" type="string" value="laser_link"/>
    <param name="inverted" type="bool" value="false"/>
    <param name="angle_compensate" type="bool" value="true"/>
    <param name="scan_mode" type="string" value="Standard" />
  </node>

  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
    <param name="scan_topic" value="scan" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="odom_combined" />
    <param name="output_timing" value="false"/>
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>

    <param name="pub_map_odom_transform" value="true" />

    <param name="map_pub_period" value="1"/>

    <param name="laser_z_min_value" value = "-0.5"/>

    <param name="map_resolution" value="0.05"/>
    <param name="map_size" value="2048"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5"/>
    <param name="map_multi_res_levels" value="5"/>

    <param name="update_factor_free" value="0.05"/>
    <param name="update_factor_occupied" value="0.98" />
    <param name="map_update_distance_thresh" value="0.5"/>
    <param name="map_update_angle_thresh" value="100" />

    <remap from="map" to="scanmatcher_map" />
  </node>

  <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="hector_trajectory_server" output="screen">
    <param name="target_frame_name" type="string" value="/map" />
    <param name="source_frame_name" type="string" value="/base_link" />
    <param name="trajectory_update_rate" type="double" value="1" />
    <param name="trajectory_publish_rate" type="double" value="1" />
  </node>

  <node pkg="hector_geotiff" type="geotiff_node" name="hector_geotiff_node" output="screen" launch-prefix="nice -n 15">
    <remap from="map" to="/dynamic_map" />
    <param name="map_file_path" type="string" value="$(find hector_geotiff)/maps" />
    <param name="map_file_base_name" type="string" value="hector_slam_map" />
    <param name="geotiff_save_period" type="double" value="10" />
    <param name="draw_background_checkerboard" type="bool" value="true" />
    <param name="draw_free_space_grid" type="bool" value="true" />
  </node>

  <!--
  <node pkg="tf" type="static_transform_publisher" name="map_odom_broadcaster" args="0 0 0 0 0 0 map odom_combined 100" />
  -->	  
</launch>
